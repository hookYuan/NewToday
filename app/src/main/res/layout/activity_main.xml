<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="1"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/pull_list_head_text_night"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/detail_more_cancel_btn_bg_pressed"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/b_newhome_tabbar" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="@string/tab1" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/b_newdiscover_tabbar" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/tab2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/b_newcare_tabbar" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/tab3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/b_newmine_tabbar"/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/tab4"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
